#!/bin/bash

sudo xcode-select -switch /Applications/Xcode.app/Contents/Developer
sudo mkdir /usr/local
sudo chown -R `whoami` /usr/local
#
ruby -e "$(curl -fsSkL raw.github.com/mxcl/homebrew/go)"
#  Agree to Xcode license
xcodebuild -license >/dev/null
echo "Agreed to Xcode license"
#
brew install bash-completion >/dev/null
echo "Installing bash-completion..."
brew install git >/dev/null
echo "Installing git..."
#
cd /usr/local
find Cellar
ls -l bin >/dev/null
git config --global user.name wbs75
git config --global user.email wbs75@me.com
#
echo -e '\nexport PATH="/usr/local/bin:/usr/local/sbin:~/bin:$PATH"' >> ~/.bash_profile
echo
#
echo -e '\nsource `brew --prefix`/Library/Contributions/brew_bash_completion.sh' >> ~/.bash_profile
echo
#
source ~/.bash_profile
#
brew tap homebrew/dupes >/dev/null
echo "Tapped homebrew dupes..."
#

brew install pkg-config >/dev/null
echo "Installing pkg-config..."
brew install libyaml >/dev/null
echo "Installing libyaml..."
brew install xar >/dev/null
echo "Installing xar..."
brew install autoconf >/dev/null
echo "Installing autoconf..."
brew install automake >/dev/null
echo "Installing automake..."
brew install apple-gcc42 >/dev/null
echo "Installing gcc42..."
brew install python >/dev/null
echo "Installing python..."
brew install python3 >/dev/null
echo "Installing python3..."
brew install wget >/dev/null
echo "Installing wget..."
brew install gptfdisk >/dev/null
echo "Installing gptfdisk..."
brew install multimarkdown >/dev/null
echo "Installing multimarkdown..."
brew install imagemagick >/dev/null
echo "Installing imagemagick..."
#
brew tap timsutton/formulae >/dev/null
echo "Tapped  timsutton formulae..."
#
brew install brew-pkg >/dev/null
echo "Installing brew-pkg"
#
brew tap homebrew/binary >/dev/null
brew install packer >/dev/null
echo "Installing packer"
#
source ~/.bash_profile
#
# Install RVM
\curl -L https://get.rvm.io | bash -s stable --ruby
#
source ~/.rvm/scripts/rvm
#
gem install bundler
gem install rubygems-update
#
gem update --system
#
brew cleanup
brew doctor
#
echo -e "\nFinshed Installing brew packages... "
echo
#
